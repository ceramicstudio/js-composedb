{
  "name": "@composedb/client",
  "version": "0.5.0",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://composedb.js.org",
  "keywords": [
    "ceramic",
    "composedb",
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/client"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src test --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "dependencies": {
    "@ceramicnetwork/http-client": "^2.30.0",
    "@ceramicnetwork/stream-model": "^1.15.0",
    "@ceramicnetwork/stream-model-instance": "^1.15.0",
    "@composedb/constants": "workspace:^0.5.0",
    "@composedb/graphql-scalars": "workspace:^0.5.0",
    "@composedb/runtime": "workspace:^0.5.0",
    "@graphql-tools/batch-execute": "^9.0.2",
    "@graphql-tools/stitch": "^9.0.1",
    "@graphql-tools/utils": "^10.0.5",
    "dataloader": "^2.2.2",
    "graphql": "^16.8.0",
    "graphql-relay": "^0.10.0"
  },
  "devDependencies": {
    "@ceramicnetwork/common": "^2.33.0",
    "@composedb/devtools": "workspace:^0.5.0",
    "@composedb/test-schemas": "workspace:^0.5.0",
    "@composedb/types": "workspace:^0.5.0",
    "dids": "^4.0.4",
    "jest-environment-composedb": "workspace:^0.5.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
