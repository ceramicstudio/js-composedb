{
  "name": "@composedb/devtools",
  "version": "0.3.1",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://composedb.js.org",
  "keywords": [
    "ceramic",
    "composedb",
    "developer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/devtools"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src test --fix",
    "test": "CERAMIC_ENABLE_EXPERIMENTAL_COMPOSE_DB=true node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "dependencies": {
    "@ceramicnetwork/stream-model": "^1.1.0-rc.0",
    "@ceramicnetwork/streamid": "^2.11.0-rc.0",
    "@composedb/graphql-scalars": "workspace:^0.3.1",
    "@graphql-tools/schema": "^9.0.16",
    "@graphql-tools/utils": "^9.2.1",
    "change-case": "^4.1.2",
    "json-ptr": "^3.1.1",
    "lodash-es": "^4.17.21",
    "multiformats": "^9.9.0",
    "object-hash": "^3.0.0",
    "type-fest": "^3.5.7",
    "uint8arrays": "^4.0.3"
  },
  "devDependencies": {
    "@ceramicnetwork/common": "^2.19.0-rc.0",
    "@composedb/test-schemas": "workspace:^0.3.0",
    "@composedb/types": "workspace:^0.3.1",
    "@types/jest": "^29.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.13.0",
    "@types/object-hash": "^3.0.2",
    "ajv": "^8.12.0",
    "dids": "^3.4.0",
    "fs-extra": "^11.1.0",
    "graphql": "^16.5.0",
    "graphql-tools": "^8.3.18",
    "jest-environment-composedb": "workspace:^0.3.1"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
