{
  "name": "@composedb/devtools",
  "version": "0.6.1",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://composedb.js.org",
  "keywords": [
    "ceramic",
    "composedb",
    "developer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/devtools"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src test --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "dependencies": {
    "@ceramicnetwork/common": "^3.4.0-rc.0",
    "@ceramicnetwork/stream-model": "^2.4.0-rc.0",
    "@ceramicnetwork/streamid": "^3.4.0-rc.0",
    "@composedb/graphql-scalars": "workspace:^",
    "@didtools/cacao": "^3.0.1",
    "@graphql-tools/schema": "^10.0.2",
    "@graphql-tools/utils": "^10.0.13",
    "change-case": "^5.4.2",
    "json-ptr": "^3.1.1",
    "lodash-es": "^4.17.21",
    "multiformats": "^13.0.1",
    "object-hash": "^3.0.0",
    "type-fest": "^4.10.2",
    "uint8arrays": "^5.0.1"
  },
  "devDependencies": {
    "@composedb/test-schemas": "workspace:^",
    "@composedb/types": "workspace:^",
    "@types/jest": "^29.5.11",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.10",
    "@types/object-hash": "^3.0.6",
    "ajv": "^8.12.0",
    "dids": "^5.0.2",
    "fs-extra": "^11.2.0",
    "graphql": "^16.8.1",
    "jest-environment-composedb": "workspace:^"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
