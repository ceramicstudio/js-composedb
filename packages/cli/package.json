{
  "name": "@composedb/cli",
  "version": "0.4.5",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://composedb.js.org",
  "keywords": [
    "ceramic",
    "composedb",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/cli"
  },
  "type": "module",
  "bin": {
    "composedb": "./bin/run.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "bin",
    "dist",
    "oclif.manifest.json"
  ],
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src test --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "--test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "oclif": {
    "commands": "./dist/commands",
    "bin": "composedb",
    "topics": {
      "did": {
        "description": "Create DIDs."
      },
      "model": {
        "description": "Create and interact with Model streams"
      },
      "document": {
        "description": "Create and interact with Model Instance Document streams"
      },
      "composite": {
        "description": "Interact with Model streams via Composites"
      },
      "graphql": {
        "description": "Get graphql schemas from Composites and run a local graphql dev server"
      }
    },
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-version"
    ]
  },
  "dependencies": {
    "@ceramicnetwork/3id-did-resolver": "^2.19.0",
    "@ceramicnetwork/http-client": "^2.23.0",
    "@ceramicnetwork/stream-model": "^1.8.0",
    "@ceramicnetwork/stream-model-instance": "^1.8.0",
    "@ceramicnetwork/streamid": "^2.14.0",
    "@composedb/client": "workspace:^0.4.4",
    "@composedb/devtools": "workspace:^0.4.4",
    "@composedb/devtools-node": "workspace:^0.4.4",
    "@composedb/runtime": "workspace:^0.4.2",
    "@oclif/core": "^2.8.10",
    "@oclif/plugin-help": "^5.2.10",
    "@oclif/plugin-version": "^1.3.5",
    "cli-table3": "^0.6.3",
    "did-resolver": "^4.1.0",
    "dids": "^4.0.3",
    "env-paths": "^3.0.0",
    "fs-extra": "^11.1.1",
    "key-did-provider-ed25519": "^3.0.0",
    "key-did-resolver": "^3.0.0",
    "listr": "^0.14.3",
    "listr-update-renderer": "^0.5.0",
    "ora": "^6.3.1",
    "term-size": "^3.0.2",
    "uint8arrays": "^4.0.4"
  },
  "devDependencies": {
    "@ceramicnetwork/common": "^2.26.0",
    "@composedb/types": "workspace:^0.4.4",
    "@swc-node/register": "^1.6.6",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/listr": "^0.14.4",
    "@types/node": "^20.3.2",
    "@types/update-notifier": "^6.0.4",
    "ajv": "^8.12.0",
    "execa": "^7.1.1",
    "jest-dev-server": "^9.0.0",
    "oclif": "^3.9.1",
    "strip-ansi": "~7.1.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globalSetup": "<rootDir>/globalSetup.js",
    "globalTeardown": "<rootDir>/globalTeardown.js",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
