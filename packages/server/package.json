{
  "name": "@composedb/server",
  "version": "0.4.1",
  "author": "3Box Labs",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://github.com/ceramicstudio/js-composedb#readme",
  "keywords": [
    "ceramic",
    "composedb",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ceramicstudio/js-composedb",
    "directory": "packages/server"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "build:clean": "del dist",
    "build:js": "swc src -d ./dist --config-file ../../.swcrc",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "build": "pnpm build:clean && pnpm build:types && pnpm build:js",
    "lint": "eslint src --fix",
    "test": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run test --ci --coverage",
    "prepare": "pnpm build",
    "prepublishOnly": "package-check"
  },
  "dependencies": {
    "@ceramicnetwork/http-client": "^2.20.0",
    "@ceramicnetwork/streamid": "^2.14.0",
    "@composedb/ceramic-codecs": "workspace:*",
    "@composedb/composite-codecs": "workspace:*",
    "@composedb/constants": "workspace:*",
    "@composedb/graph-codecs": "workspace:*",
    "@composedb/model-codecs": "workspace:*",
    "@composedb/runtime": "workspace:*",
    "@composedb/services-runner": "workspace:*",
    "@trpc/client": "^10.16.0",
    "@trpc/server": "^10.16.0",
    "dids": "^4.0.0",
    "fast-json-patch": "^3.1.1",
    "fp-ts": "^2.13.1",
    "get-port": "^6.1.2",
    "graphql": "^16.5.0",
    "graphql-yoga": "^3.7.3",
    "io-ts": "^2.2.20",
    "key-did-provider-ed25519": "^3.0.0",
    "key-did-resolver": "^3.0.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@ceramicnetwork/common": "^2.23.0",
    "@composedb/composite-service": "workspace:*",
    "@composedb/services-rpc": "workspace:*",
    "@composedb/types": "workspace:^0.4.3",
    "@types/node": "^18.15.3",
    "multiformats": "^11.0.2"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.wasm.js$": "$1.wasm.js",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc/jest",
        {
          "root": "../.."
        }
      ]
    }
  }
}
